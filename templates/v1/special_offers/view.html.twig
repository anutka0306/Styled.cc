{% extends('base.html.twig') %}
{% block body %}
    <div class="container-fluid">
            <div class="card-wrap d-flex row justify-content-center">
                <div class="card-block col-12 offset-xl-2 col-xl-4 col-lg-6 col-md-6 my-4">
                    {{ include('widget/special_offers_item.html.twig') }}
                </div>
                {% if offer.image is not empty %}
                    <div class="card-block col-12 col-xl-6 col-lg-6 col-md-6 my-4">
                        <img {{ lazy_load(vich_uploader_asset(offer,'imageFile'),['offer-image']) }} alt="{{ offer.name }}">
                    </div>
                {% endif %}
            </div>
    </div>
{% endblock %}